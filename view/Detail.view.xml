<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="Variantconf.view.Detail">
    <Page id="detailPage" navButtonPress="onNavBack" title="{i18n&gt;detailTitle}" showNavButton="{device&gt;/isPhone}">
        <content>
            <ObjectHeader id="detailHeader" title="{ATWTB}" number="" numberUnit="" introActive="false" titleActive="false" iconActive="false">
                <attributes id="detailAttributes">                
                    <ObjectAttribute id="attribute" text="{i18n&gt;detailText}" active="false">
                    </ObjectAttribute>
                </attributes>
                <firstStatus id="detailStatus">
                    <ObjectStatus id="status" text="{ATWRT}" visible="false">
                    </ObjectStatus>
                </firstStatus>
            </ObjectHeader>
            <IconTabBar expanded="{device&gt;/isNoPhone}" select="onSelectChanged" id="idIconTabBar">
    			<items id="detailsItems">
                   <IconTabFilter id="iconTabFilter1" key="selfInfo" icon="sap-icon://hint" text="Program">
                       <Text text="Description"/>
                        <content>
                			<Table id="MTEXT" class="navTableControlLayout" 
                				items="{/ZUI5_TEST_TVALUETEXTE_SET}"			 
                				growing="true" growingScrollToLoad="true">
                    				<headerToolbar id="navigationTable_headerToolbar">
                    					<Toolbar id="navigationTable_headerToolbar_toolbar"> 
                    					    <Label id="navigationTable_headerToolbar_toolbar_title" text="" class="sapMH4FontSize" />					
                    					</Toolbar>
                    				</headerToolbar>
                    				<columns id="navigationTable_columns">
                    					<Column id="navigationTable_columns_col1" width="33%" minScreenWidth="Tablet" demandPopin="true"
                    						hAlign="Left" vAlign="Top">
                    						<header id="navigationTable_columns_col1_header">						
                    						</header>
                    					</Column>
                    				</columns>
                    				<ColumnListItem id="navigationListItem">
                    					<cells id="navigationListItem_cells"> 
                    						<Text id="navigationListItem_cells_cell_1" text="{TDLINE}" />
                    					</cells>
                    				</ColumnListItem>
                			</Table>
                            </content>
                    </IconTabFilter> 
                    <IconTabFilter id="iconTabFilter2" key="2" text="Type" icon="sap-icon://group">
					     <content>
			             <Text text="Please select a type"/>     
                            <l:Grid
                        		class="sapUiSmallMarginTop"
                        		hSpacing="2"
                        		defaultSpan="L8 M8 S12">
                        		<l:content>
                            		<Image width="140px" height="140px" id="odata_img01">
                        				<layoutData>
                        					<l:GridData
                        						span="L4 M4 S10"
                        						linebreakL="true"
                        						linebreakM="true"
                        						linebreakS="true"/>
                        				</layoutData>
                        			</Image>
                        				<VBox>
                        				   <ComboBox xmlns="sap.m" id="Typ" items="{/ZUI5_TEST_TVALUES_SET}" selectionChange="onChange_T">
            						      	<items>
            				                <core:Item key="{ATWRT}" text="{ATWTB}"/>
            				                </items>
            						      </ComboBox>
                            			</VBox>
                        		</l:content>
                    	   </l:Grid> 
                        </content>
                    </IconTabFilter>
                    <IconTabFilter text="Color" key="3" icon="sap-icon://palette" id="iconTabFilter3">
                        <Text text="Please select the color"/> 
                        <content>
                            <l:Grid
                        		class="sapUiSmallMarginTop"
                        		hSpacing="2"
                        		defaultSpan="L8 M8 S12">
                        		<l:content>
                            		<Image width="140px" height="140px" id="odata_img02">
                        				<layoutData>
                        					<l:GridData
                        						span="L4 M4 S10"
                        						linebreakL="true"
                        						linebreakM="true"
                        						linebreakS="true"/>
                        				</layoutData>
                        			</Image>
                        				<VBox>
                        				    <ComboBox xmlns="sap.m" id="Farbe" items="{/ZUI5_TEST_TVALUES_SET}" selectionChange="onChange_F">
            						      	<items>
            				                <core:Item key="{ATWRT}" text="{ATWTB}"/>
            				                </items>
            						      </ComboBox>
                            			</VBox>
                        		</l:content>
                    	   </l:Grid>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter text="Material" key="4" icon="sap-icon://puzzle" id="iconTabFilter4">
                            <content>
                                <Text text="Please select the kind of material"/> 
                            <l:Grid
                        		class="sapUiSmallMarginTop"
                        		hSpacing="2"
                        		defaultSpan="L8 M8 S12">
                        		<l:content>
                            		<Image width="140px" height="140px" id="odata_img03">
                        				<layoutData>
                        					<l:GridData
                        						span="L4 M4 S10"
                        						linebreakL="true"
                        						linebreakM="true"
                        						linebreakS="true"/>
                        				</layoutData>
                        			</Image>
                        				<VBox>
                        				<ComboBox xmlns="sap.m" id="Stoff" items="{/ZUI5_TEST_TVALUES_SET}" selectionChange="onChange_S">
            						      	<items>
            				                <core:Item key="{ATWRT}" text="{ATWTB}"/>
            				                </items>
            						      </ComboBox>
                            			</VBox>
                        		</l:content>
                    	   </l:Grid> 
                    		</content>
                     </IconTabFilter>
                    <IconTabFilter text="No. pillows" key="5" icon="sap-icon://family-care" id="iconTabFilter5">
                         <Text text="Please select the number of pillows"/> 
                        <content>
                            <l:Grid
                        		class="sapUiSmallMarginTop"
                        		hSpacing="2"
                        		defaultSpan="L8 M8 S12">
                        		<l:content>
                            		<Image width="140px" height="140px" id="odata_img04">
                        				<layoutData>
                        					<l:GridData
                        						span="L4 M4 S10"
                        						linebreakL="true"
                        						linebreakM="true"
                        						linebreakS="true"/>
                        				</layoutData>
                        			</Image>
                        				<VBox>
                        				    <ComboBox xmlns="sap.m" id="Kissen" items="{/ZUI5_TEST_TVALUES_SET}" selectionChange="onChange_K">
            						      	<items>
            				                <core:Item key="{ATWRT}" text="{ATWRT}"/>
            				                </items>
            				                </ComboBox>
                            			</VBox>
                        		</l:content>
                    	   </l:Grid>
                        </content>  
                    </IconTabFilter> 
    				<core:ExtensionPoint name="extIconTabFilter"/>
                </items>
            </IconTabBar>
    		<core:ExtensionPoint name="extDetail"/>
        </content>
        <footer id="detailFooter">
            <Toolbar id="detailToolbar">
                <content>
                    <ToolbarSpacer id="toolbarSpacer">
                    </ToolbarSpacer>
                    <Button id="actionButton" press="openActionSheet" icon="sap-icon://action">
                    </Button>
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>